<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container-fluid">
      <h1><%= title %></h1>
      <p>Welcome to <%= title %>!</p>

      <div class="row">
        <div class="col-sm-3">
          <ul class="category-list">
            <li>
              <a href="/catalog/items">
                All products
              </a>
            </li>
            
            <% category_list.forEach(function(category) { %>
              <li>
                <a href="<%= category.url %>">
                  <%= category.name %> 
                </a>
              </li>
            <% }) %>     
          </ul>  
          <hr />
          <ul class="create">
            <li>
              <a href="/catalog/item/create">
                Create new product
              </a>
            </li>
            <li>
              <a href="/catalog/category/create">
                Create new category
              </a>
            </li>
          </ul>    
        </div>
        <div class="col-sm-9">
          <% if (locals.category) { %>
            <h4><%= category.name %></h4>
            <p><%= category.description %></p>
            <p>
              <a class="btn btn-outline-primary" href="<%= category.url %>/update" role="button">Update category</a>
              &nbsp; &nbsp;
              <a class="btn btn-outline-danger" href="<%= category.url %>/delete" role="button">Delete category</a>
            </p>
          <% } %>
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% item_list.forEach(function(item) { %>
              <div class="col">
                <div class="card h-100">
                  <img src="/images/<%= item.image_path %>" class="card-img-top" alt="<%= item.name %>">
                  <!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="180" 
                  xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" 
                  preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="35%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                  </svg> -->
                  <div class="card-body">
                    <h5 class="card-title">
                      <a href="<%= item.url %>">
                        <%= item.name %> 
                      </a>
                    </h5>
                    <h6 class="card-subtitle">$<%= item.price %></h6>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
